{
  "manifest_version": 3,
  "name": "Gemini Chat Exporter",
  "version": "1.1.0",
  "description": "Export your Gemini chat history to Markdown or JSON.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://*.google.com/*",
    "https://*.googleusercontent.com/*",
    "https://*.gstatic.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "src/background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/lib/turndown.min.js",
        "src/lib/turndown-plugin-gfm.min.js",
        "src/content/modules/bootstrap_utils.js",
        "src/content/modules/project_utils.js",
        "src/content/modules/i18n.js",
        "src/content/modules/markdown_converter.js",
        "src/content/modules/scroller.js",
        "src/content/modules/scroll_engine.js",
        "src/content/modules/conversation_extractor.js",
        "src/content/modules/image_exporter.js",
        "src/content/modules/anchor_panel.js",
        "src/content/modules/export_pipeline.js",
        "src/content/modules/export_handlers.js",
        "src/content/modules/export_dispatcher.js",
        "src/content/modules/ui_controller.js",
        "src/content/modules/theme_sync.js",
        "src/content/content_script.js"
      ]
    }
  ]
}
